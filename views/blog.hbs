<div class="container">
    <div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
        {{#each categories}}
        <a class="p-2 text-muted" href="/blog?category={{this}}">{{this}}</a>
        {{/each}}
    </nav>
    </div>

    {{#if featuredBlog}}
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-12 px-0">
        <h1 class="display-4 font-italic">{{featuredBlog.name}}</h1>
        <p class="lead my-3">{{featuredBlog.description}}</p>
        <p class="lead mb-0"><a href="/blog/{{featuredBlog.alias}}" class="text-white font-weight-bold">Continue reading...</a></p>
    </div>
    </div>
    {{/if}}

    <div class="row mb-2">
    {{#each blog}}
        <div class="col-md-12">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-{{this.tag.class}}">{{this.tag.name}}</strong>
                
                <h3 style="font-weight: bold; font-size: 18px;">
                    {{this.name}}
                </h3>
                
                <div class="mb-1 text-muted" style="padding:10px 0px;">Nov 12 2018</div>
                
                <p class="card-text mb-auto">{{this.description}}</p>
                <a href="/blog/{{this.alias}}" class="bc-item">Continue reading</a>
                </div>
                <img class="card-img-right flex-auto d-none d-lg-block" src="/images/blog/{{this.alias}}.jpg">
            </div>
        </div>
    {{/each}}
    </div>
</div>

<hr>