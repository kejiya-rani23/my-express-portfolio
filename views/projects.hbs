<main role="main">
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        {{#each projects}}
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <a href="/projects/{{alias}}">
                <img class="card-img-top" src="{{image}}" style="border-bottom:1px solid #e9ecef;">
              </a>
              <div class="card-body">
                <p class="card-title">{{ name }}</p>
                <p class="card-text">{{ description }}</p>
                <div class="d-flex justify-content-between align-items-center" style="margin-top:10px;">
                  <div class="btn-group">
                    <a href="/projects/{{alias}}" class="btn btn-sm btn-outline-secondary">
                      <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a href="{{ githubUrl }}" class="btn btn-sm btn-outline-secondary">
                      <i class="fab fa-github"></i> Github
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>
